<script>
  window.SUPABASE_URL = "https://yaiutswdcbfwkxfqxkzy.supabase.co"; 
  window.SUPABASE_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InlhaXV0c3dkY2Jmd2t4ZnF4a3p5Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjQ1MDE2MDgsImV4cCI6MjA4MDA3NzYwOH0.HOLFxzjsZ5Ieqg0b-aTdP0hAdLsPVXL6Zjs-HgOHgc8";

  // ---- Supabase helper ----
  async function supabaseFetch(path, options = {}) {
    if (!window.SUPABASE_URL || !window.SUPABASE_KEY) {
      console.error("Supabase is not configured. Check SUPABASE_URL and SUPABASE_KEY.");
      return {
        data: null,
        error: { status: 0, statusText: "Supabase config missing", details: null }
      };
    }

    const res = await fetch(`${window.SUPABASE_URL}/rest/v1${path}`, {
      ...options,
      headers: {
        apikey: window.SUPABASE_KEY,
        Authorization: `Bearer ${window.SUPABASE_KEY}`,
        ...(options.headers || {})
      }
    });

    let data = null;
    try {
      data = await res.json();
    } catch (e) {
      // no JSON body
    }

    if (!res.ok) {
      console.error("Supabase HTTP error", res.status, res.statusText, data);
      return {
        data: null,
        error: {
          status: res.status,
          statusText: res.statusText,
          details: data
        }
      };
    }

    return { data, error: null };
  }

  // --------------------------------------------
  // WIZARD + UI LOGIC
  // --------------------------------------------
  document.addEventListener("DOMContentLoaded", function () {
    const TOTAL_STEPS = 4;
    let currentStep = 1;

    // üëá get user_id from URL (so dashboard ‚Üí wizard works)
    const params = new URLSearchParams(window.location.search);
    const userId = params.get("user_id"); // this should be tradebotpro_signups.id when opened from dashboard

    const initialState = {
      contact_name: "",
      business_name: "",
      contact_email: "",
      contact_mobile: "",
      base_postcode: "",
      preferred_jobs: [],
      tone_of_voice: "",
      coverage_radius: "",
      callout_style: "",
      callout_band: "",
      main_trade: "",
      business_stage: "",
      channels: [],
      review_platforms: [],
      review_link: "",
      review_push_level: "",
      ai_avoid: "",
      demo_style: [],
      demo_slot: "",
      golive_timing: "",
      extra_notes: ""
    };

    const state = { ...initialState };

    // ELEMENTS
    const panels = document.querySelectorAll(".step-panel");
    const stepLabel = document.getElementById("wizard-step-label");
    const stepTitle = document.getElementById("wizard-step-title");
    const stepSubtitle = document.getElementById("wizard-step-subtitle");
    const progressBar = document.getElementById("progress-bar-inner");
    const progressPercent = document.getElementById("progress-percent");
    const stepDots = document.querySelectorAll("[data-step-dot]");
    const btnBack = document.getElementById("btn-back");
    const btnNext = document.getElementById("btn-next");
    const btnSaveDraft = document.getElementById("btn-save-draft");
    const footerText = document.getElementById("wizard-footer-text");
    const statusMessage = document.getElementById("wizard-status-message");
    const summaryBox = document.getElementById("summary-box");

    const textInputs = {
      contact_name: document.getElementById("contact_name"),
      business_name: document.getElementById("business_name"),
      contact_email: document.getElementById("contact_email"),
      contact_mobile: document.getElementById("contact_mobile"),
      base_postcode: document.getElementById("base_postcode"),
      review_link: document.getElementById("review_link"),
      ai_avoid: document.getElementById("ai_avoid"),
      extra_notes: document.getElementById("extra_notes")
    };

    // --------------------------------------------
    // CHIPS ‚Äì USING CLASS TOGGLE
    // --------------------------------------------
    function setupChips() {
      const chipRows = document.querySelectorAll(".chip-row");
      chipRows.forEach((row) => {
        const field = row.getAttribute("data-field");
        const mode = row.getAttribute("data-select"); // "single" or "multi"
        const chips = row.querySelectorAll(".chip");

        chips.forEach((chip) => {
          chip.classList.remove("is-active"); // reset initial

          chip.addEventListener("click", () => {
            const label = chip.textContent.trim();

            if (mode === "single") {
              chips.forEach((c) => c.classList.remove("is-active"));
              chip.classList.add("is-active");
              state[field] = label;
            } else {
              chip.classList.toggle("is-active");
              const selected = Array.from(chips)
                .filter((c) => c.classList.contains("is-active"))
                .map((c) => c.textContent.trim());
              state[field] = selected;
            }
          });
        });
      });
    }

    // --------------------------------------------
    // APPLY STATE ‚Üí UI (for prefill)
    // --------------------------------------------
    function populateUIFromState() {
      // Text inputs
      Object.entries(textInputs).forEach(([key, el]) => {
        if (!el) return;
        el.value = state[key] ?? "";
      });

      // Chips: rebuild from state
      const chipRows = document.querySelectorAll(".chip-row");
      chipRows.forEach((row) => {
        const field = row.getAttribute("data-field");
        const mode = row.getAttribute("data-select");
        const chips = row.querySelectorAll(".chip");
        const value = state[field];

        chips.forEach((chip) => {
          chip.classList.remove("is-active");
          const label = chip.textContent.trim();

          if (mode === "single") {
            if (value && value === label) {
              chip.classList.add("is-active");
            }
          } else if (mode === "multi") {
            if (Array.isArray(value) && value.includes(label)) {
              chip.classList.add("is-active");
            }
          }
        });
      });
    }

    // --------------------------------------------
    // TEXT INPUTS
    // --------------------------------------------
    function setupTextInputs() {
      Object.entries(textInputs).forEach(([key, el]) => {
        if (!el) return;
        el.addEventListener("input", () => {
          state[key] = el.value;
        });
      });
    }

    // --------------------------------------------
    // STEP UI
    // --------------------------------------------
    function updateStepHeader() {
      const labels = {
        1: { label: "Step 1", title: "Business basics", subtitle: "Tell us who you are" },
        2: { label: "Step 2", title: "Area & pricing", subtitle: "Where you work" },
        3: { label: "Step 3", title: "Messaging & reviews", subtitle: "How TradeBotPro talks" },
        4: { label: "Step 4", title: "Demo & go-live", subtitle: "Prepare your test run" }
      };
      const info = labels[currentStep];

      if (stepLabel) stepLabel.textContent = info.label;
      if (stepTitle) stepTitle.textContent = info.title;
      if (stepSubtitle) stepSubtitle.textContent = info.subtitle;
    }

    function showStep(step) {
      currentStep = step;

      panels.forEach((p) =>
        p.classList.toggle("is-active", Number(p.getAttribute("data-step")) === currentStep)
      );

      stepDots.forEach((dot) => {
        const s = Number(dot.getAttribute("data-step-dot"));
        dot.classList.toggle("is-active", s === currentStep);
        dot.classList.toggle("is-complete", s < currentStep);
      });

      const progress = (currentStep - 1) / (TOTAL_STEPS - 1);
      if (progressBar) progressBar.style.width = (progress * 100).toFixed(0) + "%";
      if (progressPercent) progressPercent.textContent = `Step ${currentStep} of ${TOTAL_STEPS}`;

      if (btnBack) btnBack.disabled = currentStep === 1;
      if (btnNext) btnNext.textContent = currentStep === TOTAL_STEPS ? "Finish" : "Next step ‚Üí";

      if (footerText) {
        footerText.innerHTML = `Step <strong>${currentStep}</strong> of <strong>${TOTAL_STEPS}</strong>. You can tweak anything later.`;
      }

      if (summaryBox) summaryBox.hidden = currentStep !== TOTAL_STEPS;

      if (statusMessage) {
        statusMessage.textContent = "";
        statusMessage.className = "wizard-status-message";
      }

      updateStepHeader();
    }

    function scrollTopSmooth() {
      window.scrollTo({ top: 0, behavior: "smooth" });
    }

    // --------------------------------------------
    // VALIDATION
    // --------------------------------------------
    function validateStep(step) {
      if (!statusMessage) return true;

      statusMessage.textContent = "";
      statusMessage.className = "wizard-status-message";

      if (step === 1) {
        if (!state.business_name || !state.contact_name) {
          statusMessage.textContent = "Please add your contact and business name.";
          statusMessage.classList.add("wizard-status-message--error");
          return false;
        }
      }

      if (step === 2) {
        if (!state.base_postcode) {
          statusMessage.textContent = "Please enter a base postcode.";
          statusMessage.classList.add("wizard-status-message--error");
          return false;
        }
      }

      if (step === 3) {
        if (!state.tone_of_voice) {
          statusMessage.textContent = "Choose a tone of voice.";
          statusMessage.classList.add("wizard-status-message--error");
          return false;
        }
      }

      return true;
    }

    // --------------------------------------------
    // LOAD FROM business_profiles WHEN user_id EXISTS
    // --------------------------------------------
    async function loadFromBusinessProfile() {
      if (!userId) {
        console.log("No user_id in URL ‚Äì starting with blank wizard.");
        return;
      }
      if (typeof supabaseFetch !== "function") {
        console.warn("supabaseFetch is not defined, cannot load existing profile.");
        return;
      }

      const { data, error } = await supabaseFetch(
        `/business_profiles?id=eq.${encodeURIComponent(userId)}&select=*`,
        { method: "GET" }
      );

      if (error) {
        console.error("Error loading business profile:", error);
        return;
      }
      if (!data || !data.length) {
        console.log("No business_profile found for user_id", userId);
        return;
      }

      const row = data[0];
      console.log("Loaded business profile for wizard:", row);

      // Map DB ‚Üí state
      state.contact_name = row.contact_name || row.owner_name || "";
      state.business_name = row.business_name || "";
      state.contact_email = row.email || "";
      state.contact_mobile = row.phone || "";
      state.base_postcode = row.base_postcode || "";

      if (row.services_summary) {
        state.preferred_jobs = row.services_summary
          .split(",")
          .map((s) => s.trim())
          .filter(Boolean);
      }

      populateUIFromState();
    }

    // --------------------------------------------
    // BUILD COMMON PAYLOAD FROM STATE
    // --------------------------------------------
    function buildCommonPayloadFromState() {
      return {
        business_name: state.business_name || null,
        contact_name: state.contact_name || null,
        email: state.contact_email || null,
        phone: state.contact_mobile || null,
        base_postcode: state.base_postcode || null,
        services_summary:
          state.preferred_jobs && state.preferred_jobs.length
            ? state.preferred_jobs.join(", ")
            : null
      };
    }

    // --------------------------------------------
    // SUPABASE SAVE ‚Äì business_profiles + (optionally) tradebotpro_signups
    // --------------------------------------------
    async function saveWizardToBusinessProfile() {
      if (!statusMessage) return;

      const common = buildCommonPayloadFromState();

      // payload for business_profiles
      const businessPayload = {
        ...common,
        plan_status: "Trial",
        pending_setup: true,
        is_active: false,
        // üîó link back to signup if we know the signup id
        signup_id: userId || null
      };

      console.log("Saving wizard to business_profiles:", businessPayload, "userId:", userId);

      statusMessage.textContent = "Saving‚Ä¶";
      statusMessage.className = "wizard-status-message wizard-status-message--saving";

      // Upsert into business_profiles (PATCH when userId present, POST when not)
      const { data: bpData, error: bpError } = await supabaseFetch(
        userId
          ? `/business_profiles?id=eq.${encodeURIComponent(userId)}`
          : `/business_profiles`,
        {
          method: userId ? "PATCH" : "POST",
          headers: {
            "Content-Type": "application/json",
            Prefer: "return=representation"
          },
          body: JSON.stringify(businessPayload)
        }
      );

      if (bpError) {
        console.error("Save profile error (business_profiles):", bpError);
        statusMessage.textContent = "There was a problem saving your form. Please try again.";
        statusMessage.className = "wizard-status-message wizard-status-message--error";
        return;
      }

      console.log("Business profile saved:", bpData);

      // If we know the signup id (opened from dashboard), also update tradebotpro_signups
      if (userId) {
        const signupPayload = {
          ...common,
          plan_status: "Trial",
          pending_setup: true,
          is_active: false,
          // simple status text so the dashboard has something to work with
          account_status: "Wizard complete",
          account_status_reason: "Setup wizard saved from app.html"
        };

        console.log("Updating matching tradebotpro_signups row:", signupPayload);

        const { data: suData, error: suError } = await supabaseFetch(
          `/tradebotpro_signups?id=eq.${encodeURIComponent(userId)}`,
          {
            method: "PATCH",
            headers: {
              "Content-Type": "application/json",
              Prefer: "return=representation"
            },
            body: JSON.stringify(signupPayload)
          }
        );

        if (suError) {
          // Non-fatal ‚Äì wizard still succeeded, but we log it for you in the console
          console.error("Save profile warning (tradebotpro_signups):", suError);
        } else {
          console.log("Signup row updated from wizard:", suData);
        }
      }

      statusMessage.textContent = "Form sent successfully.";
      statusMessage.className = "wizard-status-message wizard-status-message--success";
    }

    // --------------------------------------------
    // BUTTON EVENTS
    // --------------------------------------------
    if (btnBack) {
      btnBack.addEventListener("click", () => {
        if (currentStep > 1) {
          showStep(currentStep - 1);
          scrollTopSmooth();
        }
      });
    }

    if (btnNext) {
      btnNext.addEventListener("click", () => {
        if (!validateStep(currentStep)) return;

        if (currentStep < TOTAL_STEPS) {
          showStep(currentStep + 1);
          scrollTopSmooth();
        } else {
          // Final step
          saveWizardToBusinessProfile();
        }
      });
    }

    if (btnSaveDraft) {
      btnSaveDraft.addEventListener("click", () => {
        try {
          localStorage.setItem("tradebotpro_setup_wizard", JSON.stringify(state));
          if (statusMessage) {
            statusMessage.textContent = "Draft saved in this browser.";
            statusMessage.classList.add("wizard-status-message--success");
          }
        } catch (e) {
          console.error("Save draft error", e);
        }
      });
    }

    // --------------------------------------------
    // INIT
    // --------------------------------------------
    setupChips();
    setupTextInputs();
    showStep(1);
    loadFromBusinessProfile(); // ‚¨ÖÔ∏è prefill when opened from dashboard
  });
</script>

